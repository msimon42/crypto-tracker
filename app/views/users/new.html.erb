<h1>Register</h1>
<%= form_tag '/register', method: :post do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>
  <%= submit_tag 'Create Account' %>
<% end %>
