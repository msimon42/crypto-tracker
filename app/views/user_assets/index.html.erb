<% if @user.assets.length == 0 %>
  <h1>You are not tracking any assets :(</h1>
<% else %>
  <% @user.user_assets.each do |user_asset| %>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= user_asset.asset.name %></h4>
        <p>Current holdings: <%= user_asset.amount %></p>
        <%= link_to 'Add Transaction', "/myassets/#{user_asset.id}/trade", class: 'card-link btn btn-success' %>
      </div>
    </div>
  <% end %>
<% end %>
<button class='btn btn-primary' data-toggle="collapse" data-target="#add-form">Add Asset</button>
<div id='add-form' class='collapse'>
  <%= form_tag '/myassets/add', method: :get do %>
    <%= label_tag :query, 'Enter all or part of asset name here:' %>
    <div class='input-group mb-3'>
      <%= text_field_tag :query %>
      <%= submit_tag 'Search', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
